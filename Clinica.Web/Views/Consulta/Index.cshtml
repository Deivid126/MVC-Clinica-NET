
@model IEnumerable<Clinica.Web.Models.Consulta>
@{
   
    ViewData["Title"] = "Index";

}

<h1>Consultas</h1>
<p>
    <a role="button" class="btn btn-success" asp-action="Create">Cadastrar Nova Consulta</a>
</p>
<table class="table table-borderless">

    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor((model => model.Protocolo))
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Paciente.Nome)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Exame.NomeExame)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.DataConsulta)
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Protocolo)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Paciente.Nome)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Exame.NomeExame)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.DataConsulta)
                </td>

                <td scope="row" class="button-edit">
                    <a role="button" class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Protocolo">Editar</a>
                    <a role="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Protocolo">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
