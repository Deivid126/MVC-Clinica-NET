@model IEnumerable<Clinica.Web.Models.TipoExame>

@{
    ViewData["Title"] = "Index";
}

<h1>Tipos de Examaes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table table-borderless">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor((model => model.NomeTipoExame))
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.NomeTipoExame)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td scope="row" class="button-edit">
                    <a role="button" class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a role="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>

</table>

